<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Growtopia - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        @font-face {
            font-family: 'CustomFont';
            src: url('https://fonts.cdnfonts.com/s/93901/HerokingRegular-51Jm8.woff') format('woff');
            font-weight: normal;
            font-style: normal;
        }

        * {
            font-family: 'CustomFont', sans-serif;
        }

        body {
            background-color: transparent; /* Fixed typo: 'transparant' to 'transparent' */
            display: flex;
            justify-content: center;
            align-items: center;
            max-height: 105vh;
            margin: 0;
        }

        .container {
            background: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTja1pZItHnndmDL6g9ug0APEyC80O9kaIqXdMxoGu1xponuDQxU0ypRenx&s=10'); 
            border: 4px solid white;
            padding: 20px;
            border-radius: 10px;
            width: 320px;
            text-align: center;
        }

        .title {
            color: white;
            font-size: 24px;
            font-weight: bold;
        }

        .error {
            color: red;
            font-size: 14px;
            margin-top: 10px;
        }

        .input-container {
            margin-top: 10px;
            text-align: left;
        }

        .input-container label {
            color: white;
            font-size: 14px;
        }

        .input-field {
            display: flex;
            align-items: center;
            border: 2px solid white;
            background-color: black;
            padding: 8px;
            border-radius: 5px;
            color: white;
        }

        .input-field input {
            border: none;
            background: none;
            outline: none;
            color: white;
            width: 100%;
            margin-left: 5px;
            font-size: 14px;
        }

        .login-btn {
            flex: 1;
            max-width: 48%;
            background-color: white;
            border: 2px solid white;
            color: black;
            font-weight: bold;
            padding: 10px;
            width: 100%;
            margin-top: 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

        .login-btn:hover {
            background-color: gray;
        }
    </style>
</head>
<body>
    <div class="container">
        <p class="title">Growtopia Login Support</p>

        <div id="errorDiv" class="error hidden">
            <span id="errorMessage">USERNAME OR PASSWORD IS EMPTY</span>
        </div>

        <form method="post" action="/player/growid/login/validate" id="loginForm">
            <div class="input-container">
                <label for="loginGrowId">GrowID</label>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" name="growId" id="loginGrowId" placeholder="Enter your GrowID">
                </div>
            </div>

            <div class="input-container">
                <label for="loginPassword">Password</label>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="password" id="loginPassword" placeholder="Enter your password">
                    <button type="button" id="toggleLogPassword">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
            </div>
            <div class="flex justify-between items-center mt-4">
                <button type="button" id="doYouNeedAccount" class="login-btn">REGISTER</button>
                <button type="submit" id="loginButton" class="login-btn">LOGIN</button>
            </div>
        </form>
    </div>

    <script>
        document.getElementById('loginButton').addEventListener('click', function (event) {
            event.preventDefault();

            const loginForm = document.getElementById('loginForm');
            const uName = document.getElementById('loginGrowId').value;
            const uPass = document.getElementById('loginPassword').value;

            // Clear previous error messages
            document.getElementById('errorDiv').classList.add('hidden');

            if (!uName || !uPass) {
                document.getElementById('errorDiv').classList.remove('hidden');
                document.getElementById('errorMessage').innerHTML = 'Username or Password is empty';
                return;
            } else if (uName.length < 4 || uPass.length < 4) {
                document.getElementById('errorDiv').classList.remove('hidden');
                document.getElementById('errorMessage').innerHTML = 'Username or Password must be at least 4 characters long';
                return;
            } else {
                loginForm.submit();
                localStorage.setItem('growId', uName);
            }
        });

        document.getElementById('toggleLogPassword').addEventListener('click', function () {
            const LpasswordField = document.getElementById('loginPassword');
            const LpasswordFieldType = LpasswordField.getAttribute('type');
            if (LpasswordFieldType === 'password') {
                LpasswordField.setAttribute('type', 'text');
                this.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else {
                LpasswordField.setAttribute('type', 'password');
                this.innerHTML = '<i class="fas fa-eye"></i>';
            }
        });
            // handle Register text click
            document.getElementById('doYouNeedAccount').addEventListener('click', function () {
                const registerForm = document.getElementById('registerForm');
                registerForm.submit();
            });
    </script>
</body>
</html>
